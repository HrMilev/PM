@page "/authentication/{action}"
@attribute [AllowAnonymous]

<RemoteAuthenticatorView Action="@Action">
    <LoggingIn>
        <LoadingSpinner />
    </LoggingIn>
    <LogOut>
        <LoadingSpinner />
    </LogOut>
    <CompletingLoggingIn>
        <LoadingSpinner />
    </CompletingLoggingIn>
</RemoteAuthenticatorView>

@code{
    [Parameter] public string Action { get; set; }
}
