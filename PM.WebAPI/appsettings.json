{
  "ConnectionStrings": {
    "DefaultConnection": "Server=.;Database=PMData;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "IdentityServer": {
    "Clients": {
      "PM.WebApp": {
        "Profile": "IdentityServerSPA"
      },
      "React-Client": {
        "Profile": "SPA",
        "RedirectUri": "http://localhost:3000/",
        "LogoutUri": "http://localhost:3000/",
        "AllowedCorsOrigins": "http://localhost:3000",
        "AllowedScopes": [ "PM.WebAPIAPI", "openid", "profile" ],
        "AllowAccessTokensViaBrowser": true
      }
    }
  },
  "AllowedHosts": "*"
}
