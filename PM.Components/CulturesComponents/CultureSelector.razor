<DropDown OnSelected="@(async (CultureInfo culture) => await SetCultureAsync(culture))"
          Items=@AvailableCultures>
    <InitialTip>
        @CurrentCultureISO
    </InitialTip>
    <ItemTemplate Context="culture">
        <DropDownItem Item="@culture">
            @context.TwoLetterISOLanguageName.ToUpperInvariant()
        </DropDownItem>
    </ItemTemplate>
</DropDown>