@using PM.Common.Utils.Culture
@inject IConfiguration Configuration
@inject SupportedCulturesService supportedCultureSelector

@{
    var cultures = new SupportedCulturesService().Cultures;
}
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>@ViewBag.Title</title>
    <link href="~/css/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/app.css" rel="stylesheet" />
    <script src="_content/PM.Components/application.js"></script>
    <script src="https://www.google.com/recaptcha/api.js?render=@Configuration["googleReCaptcha:SiteKey"]"></script>
</head>

<body>
    <div class="main">
        <div class="content">
            <div class="d-flex justify-content-end">
                <component type="typeof(CultureSelector)" param-AvailableCultures="@(cultures)" render-mode="ServerPrerendered" />
            </div>
            @RenderBody()
            @RenderSection("scripts", required: false)
        </div>
    </div>
    <script src="_framework/blazor.server.js"></script>
</body>

</html>
